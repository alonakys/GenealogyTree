<Window x:Class="GenealogyTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Genealogy Tree" Height="569.143" Width="621.279">
    <Grid Margin="0,0,-8,0" Height="526" VerticalAlignment="Top">
        <!-- Tree display here -->
        <TreeView x:Name="genealogyTreeView" HorizontalAlignment="Left" VerticalAlignment="Top" Height="406" Width="568" Margin="20,10,0,0" />

        <!-- Buttons -->
        <Button Content="Create Person" Click="CreatePerson_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="44,0,0,10" Height="25" Width="86"/>
        <Button Content="Delete Person" Click="DeletePerson_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="481,0,0,10" RenderTransformOrigin="0.26,0.4" Height="25" Width="85"/>
        <Button Content="Edit Person" Click="EditPerson_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="25" Width="85" Margin="265,0,0,10"/>
        <Button Content="Build Tree" Click="BuildTree_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="280" Margin="170,440,0,0"/>
    </Grid>
</Window>
